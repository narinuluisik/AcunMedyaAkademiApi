@model List<AcunMedyaAkademiWebUI.DTOs._BlogPartial.ResultBlogDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="container-fluid py-5">
    <div class="d-flex justify-content-between align-items-center border-bottom pb-3 mb-4">
        <h2 class="fw-semibold text-primary mb-0">📝 Blog Listesi</h2>
        <a href="/AdminBlog/AddBlog/" class="btn btn-primary btn-sm shadow">
            ➕ Yeni Blog Ekle
        </a>
    </div>

    <div class="row">
        @foreach (var blog in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100 border-0">
                    <img src="@blog.ImageUrl" class="card-img-top" alt="Blog Görseli" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title">@blog.Title</h5>
                        <p class="text-muted small mb-2">📅 @blog.Date.ToString("dd MMMM yyyy")</p>
                        <div class="mt-auto d-flex justify-content-between">
                            <a href="/AdminBlog/DeleteBlog/@blog.BlogID" class="btn btn-sm btn-outline-danger">Sil</a>
                            <a href="/AdminBlog/UpdateBlog/@blog.BlogID" class="btn btn-sm btn-outline-success">Güncelle</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
