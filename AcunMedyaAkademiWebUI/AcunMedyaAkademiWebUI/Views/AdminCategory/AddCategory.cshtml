@model AcunMedyaAkademiWebUI.DTOs.CreateCategoryDto
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}



<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4 text-primary">📝 Yeni Kategori Ekle</h2>
            <form asp-action="AddCategory" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="CategoryName" class="form-label">Kategori İsmi</label>
                    <input asp-for="CategoryName" class="form-control" />
                   
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="ti-plus"></i> Kategori Ekle
                </button>
                <a href="/AdminCategory/Index" class="btn btn-secondary ms-2">
                    <i class="ti-arrow-left"></i> Geri Dön
                </a>
            </form>
        </div>
    </div>
</div>
