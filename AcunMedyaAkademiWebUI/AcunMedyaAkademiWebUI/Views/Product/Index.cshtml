@model List<AcunMedyaAkademiWebUI.DTOs.Product.ResultProductDto>

@{
    Layout = null;
}


<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />


<table class="table table-responsive table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Fiyatı</th>
            <th>Resmi</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td><img a href="@item.ImageUrl" /></td>
                <td>
                    <a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger btn-sm">Sil</a>
                </td>
                <td>
                    <a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-primary btn-sm">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Product/CreateProduct" class="btn btn-info">Yeni Kategori Girişi</a>
