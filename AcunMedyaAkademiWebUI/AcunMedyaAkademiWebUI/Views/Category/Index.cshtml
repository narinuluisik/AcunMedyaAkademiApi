@model List<AcunMedyaAkademiWebUI.DTOs.ResultCategoryDto>
@{
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />


<table class="table table-responsive table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>
                    <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger btn-sm">Sil</a>
                </td>
                <td>
                    <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-primary btn-sm">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Category/CreateCategory" class="btn btn-info">Yeni Kategori Girişi</a>
